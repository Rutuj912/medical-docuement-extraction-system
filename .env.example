# Application Settings
APP_NAME=Medical-Charity-OCR-System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Storage Paths
UPLOAD_DIR=storage/uploads
MERGED_PDF_DIR=storage/merged_pdfs
PROCESSED_IMAGE_DIR=storage/processed_images
JSON_TASKS_DIR=storage/json_tasks
LOGS_DIR=logs

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_FILES_PER_UPLOAD=10
ALLOWED_EXTENSIONS=pdf

# OCR Configuration
DEFAULT_OCR_ENGINE=tesseract  # Options: tesseract, easyocr, paddle
OCR_CONFIDENCE_THRESHOLD=0.5
OCR_LANGUAGE=eng  # For Tesseract: eng, eng+hin, etc.
OCR_PSM_MODE=3  # Tesseract Page Segmentation Mode (3 = Fully automatic)
OCR_OEM_MODE=3  # Tesseract OCR Engine Mode (3 = Default, based on what's available)

# Enable Multiple OCR Engines for Comparison
ENABLE_MULTI_ENGINE=False
FALLBACK_OCR_ENGINE=easyocr

# Image Preprocessing
ENABLE_PREPROCESSING=True
ENABLE_DENOISING=True
ENABLE_DESKEWING=True
ENABLE_BINARIZATION=True
ENABLE_CONTRAST_ENHANCEMENT=True
DPI_CONVERSION=300  # DPI for PDF to image conversion

# Advanced Processing
DETECT_HANDWRITING=True
DETECT_TABLES=True
DETECT_MEDICAL_FORMS=True

# Database Configuration (Future Phase)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ocr_system
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHING=False

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_TO_FILE=True
LOG_ROTATION=midnight
LOG_RETENTION_DAYS=30

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Task Management
TASK_RETENTION_DAYS=30
AUTO_CLEANUP=True

# Performance
ENABLE_ASYNC_PROCESSING=True
MAX_CONCURRENT_TASKS=5

# Monitoring
ENABLE_METRICS=False
SENTRY_DSN=

# External Services (Optional)
GOOGLE_CLOUD_VISION_ENABLED=False
GOOGLE_CLOUD_VISION_KEY_PATH=
AWS_TEXTRACT_ENABLED=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
